{
  "lexicon": 1,
  "id": "garden.spores.site.config",
  "defs": {
    "main": {
      "type": "record",
      "key": "literal:self",
      "description": "Site configuration for spores.garden, including title and subtitle.",
      "record": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "maxGraphemes": 100,
            "maxLength": 1000,
            "description": "Site title"
          },
          "subtitle": {
            "type": "string",
            "maxGraphemes": 200,
            "maxLength": 2000,
            "description": "Site subtitle"
          },
          "fontHeading": {
            "type": "string",
            "maxLength": 50,
            "description": "Heading font ID"
          },
          "fontBody": {
            "type": "string",
            "maxLength": 50,
            "description": "Body font ID"
          }
        }
      }
    }
  }
}
