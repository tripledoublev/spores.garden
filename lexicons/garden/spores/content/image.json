{
    "lexicon": 1,
    "id": "garden.spores.content.image",
    "defs": {
        "main": {
            "type": "record",
            "description": "An image uploaded to the garden.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "image",
                    "createdAt"
                ],
                "properties": {
                    "image": {
                        "type": "blob",
                        "accept": [
                            "image/*"
                        ],
                        "maxSize": 10000000,
                        "description": "The image blob."
                    },
                    "title": {
                        "type": "string",
                        "maxGraphemes": 200,
                        "maxLength": 2000,
                        "description": "Optional title for the image."
                    },
                    "embed": {
                        "type": "unknown",
                        "description": "Optional Bluesky-compatible image embed payload."
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Client-declared timestamp when the image was uploaded."
                    }
                }
            }
        }
    }
}
